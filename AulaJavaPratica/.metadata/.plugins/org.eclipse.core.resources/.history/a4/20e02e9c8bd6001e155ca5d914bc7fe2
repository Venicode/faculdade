public class Pessoa {
	private String nome;
	private int idade;
	
	public void falar() {
		System.out.println("Olá! tudo bem? Meu nome é "+nome);
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public void setIdade(int idade) {
		this.idade = idade;
	}
	public String getNome() {
		return nome;
	}
	public int getIdade() {
		return idade;
	}
}
